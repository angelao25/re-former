This is where we will create a new User.
Bonsoir Elliot!
</h1>
<%
=begin%>

<form action="/users" accept-charset="UTF-8" method="post">
  <label for="username">Username:</label>
  <input type="text" id="username" name="user[username]"><br>

  <label for="email">Email:</label>
  <input type="email" id="email" name="user[email]"><br>

  <label for="password">Password:</label>
  <input type="password" id="password" name="user[password]"><br>

  <input type="submit" value="Submit">
</form>
<%
=end%>

<%= form_with(model: @user, local: true) do |form| %>
  <%= form.label :username, "Your user name here" %>
  <%= form.text_field :username, value: "Angelao", placeholder: "Enter your username" %><br>

  <%= form.label :email %>
  <%= form.email_field :email, placeholder: "example@example.com" %><br>

  <%= form.label :password %>
  <%= form.password_field :password %><br>

  <%= form.submit "Submit" %>
<% end %>




