<h1>Edit user</h1>

<% if @user.errors.any? %>
    <div id="error_explanation">
        <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>
        <ul>
            <% @user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
        </ul>
    </div>
<% end %>

<%= form_with(model: @user, url: user_path(@user), method: :patch) do |form| %>
  <%= form.label :username, "Your user name here" %>
  <%= form.text_field :username, value: "Angelao", placeholder: "Enter your username" %><br>

  <%= form.label :email %>
  <%= form.email_field :email, placeholder: "example@example.com" %><br>

  <%= form.label :password %>
  <%= form.password_field :password %><br>

  <%= form.submit "Submit" %>
<% end %>
